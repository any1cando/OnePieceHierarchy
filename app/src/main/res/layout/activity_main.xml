<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/chooseGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="40dp"

        android:text="@string/top_title" />

    <RadioGroup
        android:id="@+id/radioGroupStartID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/radioButtonPirate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Пираты"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text_color"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/radio_button_selector"
            />

        <RadioButton
            android:id="@+id/radioButtonMarine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Морской Дозор"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text_color"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/radio_button_selector"
            />

        <RadioButton
            android:id="@+id/radioButtonShachiBukai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Шачибукай"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text_color"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/radio_button_selector"
            />

        <Button
            android:id="@+id/buttonGoToSecondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:height="60dp"
            android:text="@string/next"
            android:textColor="@color/my_white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/orange"
            />

    </RadioGroup>

</LinearLayout>